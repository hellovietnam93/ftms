<div id="user-pull-task-<%= user_task.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="label-modal"><%= t "tasks.pull_request" %></h4>
      </div>
      <div class="modal-body modal-user-task">
        <%= form_for user_task ,url: user_task_path(user_task, status: "continue"), remote: true do |f| %>
          <div>
            <%= f.label :pull_request_url %>
            <%= f.text_field :pull_request_url, class: "form-control", required: true,
              placeholder: t("tasks.form.input_task_pull_request") %>
          </div>
          <br>
          <div class="form-group">
            <%= f.submit t("buttons.create"), class: "btn-action" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
