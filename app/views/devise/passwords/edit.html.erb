<section id="login" >
  <div class="row">
    <div class="col-xs-12">
      <div class="form-wrap">
        <h1><%= t "user.password_change" %></h1>
        <%= form_for resource, as: resource_name,
          url: password_path(resource_name), html: {method: :put} do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.password_field :password,
              placeholder: t("user.fields.new_password"), class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off",
              placeholder: t("user.fields.new_password_confirm"),
              class: "form-control" %>
          </div>
          <%= f.submit t("user.password_change"),
            class: "btn btn-custom btn-lg btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
